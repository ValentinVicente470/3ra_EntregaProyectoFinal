<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title> Ecommerce </title>
    <script src="/socket.io/socket.io.js"></script>

    <style>
        .padd {
            padding-top: 30px;
        }

        .fondo {
            background: #000;
        }
    </style>

</head>

<body>

    <nav class="navbar fixed-top navbar-dark bg-dark" style="border-bottom: 1px solid rgba(255, 224, 100, 0.341);">

        <div class="container-fluid">
            <a class="navbar-brand">Bienvenido/a, <span class="fw-bold">
                    <%= datos.user%>!
                </span></a>
            <div class="d-flex">
                <button type="button" class="btn btn-dark material-symbols-outlined" data-bs-toggle="modal"
                    data-bs-target="#exampleModal">add_box</button>
                <a class="btn btn-dark material-symbols-outlined" data-bs-toggle="modal"
                    data-bs-target="#closeModal">logout</a>
            </div>
        </div>

    </nav>

  
    <div class="row padd">

        <div class="col-4 bg-dark gx-0">
            <div class="bg-dark" style="height: 87vh!important;">

                <h2 class="fw-bold text-light text-center pt-2 pb-2 border border-secondary"> Chat </h2>
                <div class="container" id="messages"> </div>

            </div>

            <form class="d-flex mb-2" onsubmit="return addMessage(this);">

                <input type="email" id="username" name="username" class="form-control" value="<%= datos.email %>"
                style="width: 30%; margin-left: 20px; margin-right: 6px;" readonly>

                <input type="text" id="text" name="text" class="form-control" 
                style="width: 60%; margin-right: 20px;">

                <input type="submit" class="btn btn-dark material-symbols-outlined"
                style="margin-left: -20px; width: 10%;" value="send">

            </form>
        </div>

        <!-- tabla prods -->
        <div class="col gx-0">
            <table class="table table-striped table-hover">
                <thead class="table-dark" style="color:rgb(237, 195, 27);">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Foto</th>
                        <th scope="col">ID</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody id="product">
                </tbody>
            </table>
        </div>
    </div>

    <!-- Boton Chat -->
    <div class="position-relative container-fluid ">
        <button 
            data-bs-toggle="modal" 
            data-bs-target="#ChatModal"
            type="button" 
            class="bg-dark position-absolute bottom-0 end-0 mb-2 me-2 material-symbols-outlined text-light text-center text-decoration-none"
            style="padding: 13px 15px; border-radius: 50%;"> chat 
        </button>
    </div>

    <!-- Modal Boton Chat-->
    <div class="modal fade" id="ChatModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h2 class="modal-title " id="exampleModalLabel"> Chat </h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class=" bg-dark gx-0">
                        <div class="bg-dark" style="height: 87vh!important;">
            
                            <!-- <h2 class="fw-bold text-light text-center pt-2 pb-2 border border-secondary"> Chat </h2> -->
                            <div class="container" id="messages"> </div>
            
                        </div>
            
                        <form class="d-flex mb-2" onsubmit="return addMessage(this);">
            
                            <input type="email" id="username" name="username" class="form-control" value="<%= datos.email %>"
                            style="width: 30%; margin-left: 20px; margin-right: 6px;" readonly>
            
                            <input type="text" id="text" name="text" class="form-control" 
                            style="width: 60%; margin-right: 20px;">
            
                            <input type="submit" class="btn btn-dark material-symbols-outlined"
                            style="margin-left: -20px; width: 10%;" value="send">
            
                        </form>
                    </div>
            
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>

            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

        <div class="modal-dialog">

            <div class="modal-content">

                <div class="modal-header">

                    <div class="d-flex">
                        <h2 class="fw-bold text-center">Agregar producto</h2>
                    </div>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                </div>

                <div class="modal-body">

                    <div class="">

                        <form onsubmit="return addProduct(this)">

                            <div class="form-group mb-3">
                                <label for="name" class="fw-bold">Nombre del producto</label>
                                <input type="text" class="form-control" id="name" placeholder="Nombre del producto">
                            </div>

                            <div class="form-group mb-3">
                                <label for="price" class="fw-bold">Precio del producto</label>
                                <input type="number" class="form-control" id="price" placeholder="Precio del producto">
                            </div>

                            <div class="form-group mb-3">
                                <label for="description" class="fw-bold">Descripción</label>
                                <input type="text" class="form-control" id="description" placeholder="Descripción">
                            </div>

                            <div class="form-group mb-3">
                                <label for="stock" class="fw-bold">Stock</label>
                                <input type="number" class="form-control" id="stock" placeholder="Stock">
                            </div>

                            <div class="form-group mb-5">
                                <label for="thumbnail" class="fw-bold">Foto</label>
                                <input type="text" class="form-control" id="thumbnail" placeholder="Foto">
                            </div>

                            <div class="d-grid mb-5">
                                <button type="submit" class="btn btn-success" data-bs-dismiss="modal">Agregar</button>
                            </div>

                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <div class="modal fade" id="closeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

        <div class="modal-dialog">

            <div class="modal-content">

                <div class="modal-header">

                    <h5 class="modal-title" id="exampleModalLabel">Salir</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <p>¿Estás seguro/a que deseas salir?</p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <a href="http://localhost:8080/logout" class="btn btn-danger">Salir</a>
                </div>

            </div>

        </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
        crossorigin="anonymous"></script>
    <script src="main.js"></script>
</body>

</html>